<script src="https://cdn.jsdelivr.net/npm/simplemde@1.11.2/dist/simplemde.min.js"></script>
<script>
  // Initialize SimpleMDE with custom settings
  const simplemde = new SimpleMDE({
    element: document.getElementById("content"),
    spellChecker: false,
    placeholder: "Start writing your blog post...",
    status: ["lines", "words", "cursor"],
    toolbar: [
      "bold", "italic", "heading", "|",
      "quote", "unordered-list", "ordered-list", "|",
      "link", "image", "|",
      "preview", "side-by-side", "fullscreen", "|",
      "guide"
    ],
    autosave: {
      enabled: true,
      uniqueId: "blog-draft",
      delay: 1000,
    },
  });

  // Live preview logic
  const titleInput = document.getElementById('title');
  const slugInput = document.getElementById('slug-input');
  const previewTitle = document.getElementById('preview-title');
  const previewDesc = document.getElementById('preview-desc');
  const wordCount = document.getElementById('word-count');
  const readTime = document.getElementById('read-time');

  // Update title preview
  titleInput.addEventListener('input', (e) => {
    const title = e.target.value;
    previewTitle.textContent = title || 'Your blog title will appear here...';

    // Auto-generate slug
    if (!slugInput.value || slugInput.dataset.auto === 'true') {
      slugInput.value = title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
      slugInput.dataset.auto = 'true';
    }
  });

  slugInput.addEventListener('input', () => {
    slugInput.dataset.auto = 'false';
  });

  // Update content preview
  simplemde.codemirror.on("change", () => {
    const content = simplemde.value();
    const words = content.trim().split(/\s+/).filter(word => word.length > 0).length;
    const readingTime = Math.ceil(words / 200); // Average reading speed

    // Strip markdown for preview
    const plainText = content
            .replace(/#+\s/g, '')
            .replace(/\*\*/g, '')
            .replace(/\*/g, '')
            .replace(/\n/g, ' ')
            .substring(0, 120);

    previewDesc.textContent = plainText + (content.length > 120 ? '...' : '') || 'Start typing to see your content preview...';
    wordCount.textContent = words + ' words';
    readTime.textContent = readingTime + ' min read';
  });

  // Image upload feedback
  function updateImageName(input) {
    const fileName = input.files[0]?.name;
    document.getElementById('image-name').textContent = fileName ? 'Selected: ' + fileName : '';
  }

  // Focus title on load
  window.addEventListener('DOMContentLoaded', () => {
    titleInput.focus();
  });

  // Form validation
  document.getElementById('blogForm').addEventListener('submit', (e) => {
    if (!simplemde.value().trim()) {
      e.preventDefault();
      alert('Please add some content to your blog post before publishing.');
