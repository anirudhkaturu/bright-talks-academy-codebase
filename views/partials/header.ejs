<header class="site-header">
  <div class="site-header__logo">
    <img src="/imgs/bright-talks-logo.png" alt="Bright Talks Academy">
  </div>

  <nav class="site-header__nav">
    <ul class="site-header__menu">
      <li class="site-header__item"><a href="/" class="site-header__link">Home</a></li>
      <li class="site-header__item"><a href="/about" class="site-header__link">About</a></li>
      <li class="site-header__item"><a href="/portfolio" class="site-header__link">Portfolio</a></li>
      <li class="site-header__item"><a href="/blogs" class="site-header__link">Blogs</a></li>
      <li class="site-header__item"><a href="/contact" class="site-header__link">Contact</a></li>
      <li class="site-header__item"><a href="/tandc" class="site-header__link">T&C</a></li>
    </ul>
  </nav>

  <div class="site-header__actions">
    <% if (user) { %>
      <a href="/profile" class="site-header__btn site-header__btn--primary">Profile</a>
    <% } else { %>
      <a href="/login" class="site-header__btn site-header__btn--secondary">Login</a>
      <a href="/signup" class="site-header__btn site-header__btn--primary">Sign Up</a>
    <% } %>
  </div>
</header>

<style>
  /* Scoped to site-header only - won't affect other elements */
  .site-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    gap: 0.5rem;
    width: 100%;
    box-sizing: border-box;
  }

  .site-header__logo img {
    height: 32px;
    width: auto;
    display: block;
  }

  .site-header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .site-header__menu {
    display: flex;
    list-style: none;
    gap: 1.25rem;
    margin: 0;
    padding: 0;
  }

  .site-header__item {
    margin: 0;
    padding: 0;
  }

  .site-header__link {
    text-decoration: none;
    color: #333;
    font-weight: 500;
    font-size: 0.9rem;
    white-space: nowrap;
    display: block;
  }

  .site-header__actions {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .site-header__btn {
    padding: 0.4rem 0.9rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.85rem;
    white-space: nowrap;
    transition: all 0.2s;
    display: inline-block;
    text-align: center;
  }

  .site-header__btn--secondary {
    color: #007bff;
    border: 1px solid #007bff;
    background: transparent;
  }

  .site-header__btn--primary {
    background: #007bff;
    color: white;
    border: 1px solid #007bff;
  }

  /* Mobile adjustments */
  @media (max-width: 640px) {
    .site-header {
      padding: 0.5rem 0.75rem;
      gap: 0.4rem;
    }

    .site-header__logo img {
      height: 28px;
    }

    .site-header__menu {
      gap: 0.6rem;
    }

    .site-header__link {
      font-size: 0.75rem;
    }

    .site-header__btn {
      padding: 0.3rem 0.6rem;
      font-size: 0.75rem;
    }
  }

  @media (max-width: 400px) {
    .site-header__menu {
      gap: 0.4rem;
    }

    .site-header__link {
      font-size: 0.7rem;
    }

    .site-header__actions {
      gap: 0.3rem;
    }

    .site-header__btn {
      padding: 0.25rem 0.5rem;
      font-size: 0.7rem;
    }
  }
</style>