<header class="site-header">
  <div class="site-header__container">
    <!-- Logo -->
    <a href="/" class="site-header__logo">
      <img src="/imgs/bright-talks-logo.png" alt="Bright Talks Academy">
    </a>

    <!-- Mobile Toggle -->
    <button class="site-header__mobile-toggle" id="menuToggle" aria-label="Menu" aria-expanded="false">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <!-- Navigation & Actions Wrapper -->
    <div class="site-header__menu-wrapper" id="menuWrapper">
      <nav class="site-header__nav">
        <ul class="site-header__menu">
          <li><a href="/" class="site-header__link">Home</a></li>
          <li><a href="/about" class="site-header__link">About</a></li>
          <li><a href="/portfolio" class="site-header__link">Portfolio</a></li>
          <li><a href="/blogs" class="site-header__link">Blogs</a></li>
          <li><a href="/contact" class="site-header__link">Contact</a></li>
          <li><a href="/tandc" class="site-header__link">T&C</a></li>
        </ul>
      </nav>

      <div class="site-header__actions">
        <% if (user) { %>
          <a href="/profile" class="site-header__btn site-header__btn--profile">Profile</a>
        <% } else { %>
          <a href="/login" class="site-header__btn site-header__btn--login">Login</a>
          <a href="/signup" class="site-header__btn site-header__btn--signup">Sign Up</a>
        <% } %>
      </div>
    </div>
  </div>
</header>

<style>
  :root {
    --primary: #0a2f5c;
    --accent: #fbbf24;
    --dark: #1f2937;
    --muted: #6b7280;
    --light: #f9fafb;
    --white: #ffffff;
  }

  /* Base Header */
  .site-header {
    background: var(--white);
    border-bottom: 3px solid var(--accent);
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 10px rgba(10, 47, 92, 0.1);
  }

  .site-header__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  /* Fixed: Constrained logo height to fit container */
  .site-header__logo {
    display: flex;
    align-items: center;
    height: 100%;
    padding: 0.5rem 0;
  }

  .site-header__logo img {
    height: 100px; /* Reduced from 100px to fit 70px container */
    width: auto;
    max-width: 100%;
    display: block;
    object-fit: contain;
  }

  /* Desktop Layout */
  .site-header__menu-wrapper {
    display: flex;
    align-items: center;
    flex: 1;
    margin-left: 3rem;
  }

  .site-header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .site-header__menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
  }

  .site-header__link {
    text-decoration: none;
    color: var(--dark);
    font-weight: 600;
    font-size: 0.95rem;
    position: relative;
    padding: 0.5rem 0;
    transition: all 0.3s;
    white-space: nowrap;
  }

  /* Yellow underline effect */
  .site-header__link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 3px;
    background: var(--accent);
    transition: width 0.3s;
    border-radius: 2px;
  }

  .site-header__link:hover {
    color: var(--primary);
  }

  .site-header__link:hover::after,
  .site-header__link--active::after {
    width: 100%;
  }

  .site-header__link--active {
    color: var(--primary);
  }

  /* Buttons - Right aligned */
  .site-header__actions {
    display: flex;
    gap: 0.75rem;
    margin-left: 2rem;
  }

  .site-header__btn {
    padding: 0.6rem 1.25rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s;
    text-align: center;
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .site-header__btn--login {
    color: var(--primary);
    border: 2px solid var(--primary);
  }

  .site-header__btn--login:hover {
    background: var(--primary);
    color: var(--white);
  }

  .site-header__btn--signup,
  .site-header__btn--profile {
    background: var(--accent);
    color: var(--primary);
    border: 2px solid var(--accent);
    box-shadow: 0 4px 12px rgba(251, 191, 36, 0.3);
  }

  .site-header__btn--signup:hover,
  .site-header__btn--profile:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(251, 191, 36, 0.4);
    background: #f59e0b;
    border-color: #f59e0b;
  }

  /* Mobile Toggle */
  .site-header__mobile-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 44px; /* Larger touch target */
    height: 44px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1100;
    gap: 5px; /* Space between lines */
  }

  .hamburger-line {
    width: 24px;
    height: 2.5px;
    background: var(--primary);
    border-radius: 2px;
    transition: all 0.3s ease-in-out;
    display: block;
  }

  /* MOBILE STYLES */
  @media (max-width: 768px) {
    .site-header__container {
      height: 70px;
      padding: 0 1.25rem;
      gap: 1rem;
    }

    .site-header__logo img {
      height: 40px; /* Fixed: Properly sized for mobile */
    }

    .site-header__mobile-toggle {
      display: flex;
      flex-shrink: 0;
    }

    /* Animated Hamburger to X */
    .site-header__mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(1) {
      transform: translateY(7.5px) rotate(45deg);
    }

    .site-header__mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(2) {
      opacity: 0;
      transform: scaleX(0);
    }

    .site-header__mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(3) {
      transform: translateY(-7.5px) rotate(-45deg);
    }

    /* Mobile Menu Overlay */
    .site-header__menu-wrapper {
      position: fixed;
      top: 60px;
      left: 0;
      width: 100%;
      height: calc(100vh - 60px);
      /* Better mobile viewport support */
      height: calc(100dvh - 60px);
      background: var(--primary);
      /* Improved: Subtle backdrop blur for depth */
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      flex-direction: column;
      justify-content: flex-start;
      align-items: stretch;
      /* Reduced padding top, increased bottom for safe area */
      padding: 0.5rem 1.5rem 2rem;
      margin-left: 0;
      /* Fixed: Reduced gap to bring buttons closer to nav */
      gap: 0;
      transform: translateX(100%);
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      overflow-y: auto;
      box-sizing: border-box;
      z-index: 999;
      box-shadow: -5px 0 20px rgba(0,0,0,0.2);
    }

    .site-header__menu-wrapper.active {
      transform: translateX(0);
    }

    /* Mobile Navigation */
    .site-header__menu {
      flex-direction: column;
      align-items: stretch;
      gap: 0;
      width: 100%;
      /* Slightly reduced margin to bring closer to buttons */
      margin-bottom: 0.5rem;
    }

    .site-header__menu li {
      width: 100%;
      border-bottom: 1px solid rgba(251, 191, 36, 0.15);
    }

    /* Improved touch targets */
    .site-header__link {
      color: var(--white);
      font-size: 1.1rem;
      padding: 1rem;
      display: block;
      text-align: left;
      position: relative;
      transition: all 0.25s;
      min-height: 44px; /* Minimum touch target */
      display: flex;
      align-items: center;
    }

    .site-header__link::after {
      display: none;
    }

    .site-header__link:active {
      background: rgba(251, 191, 36, 0.15);
    }

    .site-header__link:hover {
      color: var(--accent);
      background: rgba(251, 191, 36, 0.08);
      padding-left: 1.25rem;
    }

    /* Mobile Active State */
    .site-header__link--active {
      color: var(--accent);
      background: rgba(251, 191, 36, 0.1);
      font-weight: 700;
    }

    .site-header__link--active::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      height: 60%;
      width: 4px;
      background: var(--accent);
      border-radius: 0 2px 2px 0;
      box-shadow: 0 0 10px rgba(251, 191, 36, 0.5);
    }

    /* Mobile Actions - Fixed spacing */
    .site-header__actions {
      flex-direction: column;
      width: 100%;
      gap: 0.5rem; /* Tighter gap between buttons */
      margin-left: 0;
      margin-top: 0;
      padding-top: 0.5rem;
      border-top: 1px solid rgba(251, 191, 36, 0.3);
    }

    .site-header__btn {
      width: 100%;
      padding: 0.875rem;
      font-size: 1rem;
      min-height: 48px; /* Better touch target */
    }

    .site-header__btn--login {
      background: transparent;
      color: var(--white);
      border: 2px solid var(--accent);
      order: 2;
    }

    .site-header__btn--login:hover,
    .site-header__btn--login:active {
      background: var(--accent);
      color: var(--primary);
    }

    .site-header__btn--signup,
    .site-header__btn--profile {
      background: var(--accent);
      color: var(--primary);
      border: 2px solid var(--accent);
      order: 1;
    }
  }

  /* Tablet adjustments */
  @media (min-width: 769px) and (max-width: 968px) {
    .site-header__container {
      padding: 0 1.5rem;
    }
    
    .site-header__menu-wrapper {
      margin-left: 2rem;
    }
    
    .site-header__menu {
      gap: 1.75rem;
    }
    
    .site-header__actions {
      margin-left: 1.5rem;
    }
    
    .site-header__logo img {
      height: 45px;
    }
  }
</style>

<script>
  (function() {
    const menuToggle = document.getElementById('menuToggle');
    const menuWrapper = document.getElementById('menuWrapper');
    
    if (!menuToggle || !menuWrapper) return;

    function toggleMenu() {
      const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
      menuToggle.setAttribute('aria-expanded', !isExpanded);
      menuToggle.classList.toggle('active');
      menuWrapper.classList.toggle('active');
      document.body.style.overflow = !isExpanded ? 'hidden' : '';
    }

    function closeMenu() {
      menuToggle.setAttribute('aria-expanded', 'false');
      menuToggle.classList.remove('active');
      menuWrapper.classList.remove('active');
      document.body.style.overflow = '';
    }

    // Toggle click
    menuToggle.addEventListener('click', toggleMenu);

    // Close when clicking links
    menuWrapper.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close menu when resizing to desktop
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        if (window.innerWidth > 768 && menuWrapper.classList.contains('active')) {
          closeMenu();
        }
      }, 100);
    });

    // Active state logic - Fixed: Remove all first, then add to current
    function setActiveLink() {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.site-header__link');
      
      // Remove active from all first
      navLinks.forEach(link => link.classList.remove('site-header__link--active'));
      
      // Add to matching link
      navLinks.forEach(link => {
        const linkPath = link.getAttribute('href');
        if (currentPath === linkPath || (currentPath !== '/' && linkPath !== '/' && currentPath.startsWith(linkPath))) {
          link.classList.add('site-header__link--active');
        }
      });
    }

    setActiveLink();
    
    // Handle popstate (back/forward buttons)
    window.addEventListener('popstate', setActiveLink);
  })();
</script>