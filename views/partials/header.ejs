<header class="bright-header">
  <div class="bright-header__container">
    <!-- Logo Section - Left aligned -->
    <div class="bright-header__brand">
      <a href="/" class="bright-header__logo">
        <img src="/imgs/bright-talks-logo.png" alt="The Bright Talks Academy">
      </a>
    </div>

    <!-- Center Section - Title and Navigation -->
    <div class="bright-header__center">
      <span class="bright-header__title">The Bright Talks Academy</span>
      
      <!-- Desktop Navigation - Below title -->
      <nav class="bright-header__nav">
        <a href="/" class="bright-header__link">Home</a>
        <a href="/about" class="bright-header__link">About</a>
        <a href="/courses" class="bright-header__link">Courses</a>
        <a href="/portfolio" class="bright-header__link">Portfolio</a>
        <a href="/contact" class="bright-header__link">Contact</a>
        <a href="/tandc" class="bright-header__link">Terms</a>
      </nav>
    </div>

    <!-- Actions - Right side -->
    <div class="bright-header__actions">
      <% if (user) { %>
        <a href="/profile" class="bright-header__btn bright-header__btn--primary">
          <span>Profile</span>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </a>
      <% } else { %>
        <a href="/login" class="bright-header__btn bright-header__btn--ghost">Login</a>
        <a href="/signup" class="bright-header__btn bright-header__btn--primary">Get Started</a>
      <% } %>
    </div>

    <!-- Mobile Toggle -->
    <button class="bright-header__toggle" id="menuToggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="bright-header__toggle-line"></span>
      <span class="bright-header__toggle-line"></span>
      <span class="bright-header__toggle-line"></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div class="bright-header__mobile" id="mobileMenu">
    <div class="bright-header__mobile-inner">
      <nav class="bright-header__mobile-nav">
        <a href="/" class="bright-header__mobile-link">Home</a>
        <a href="/about" class="bright-header__mobile-link">About</a>
        <a href="/courses" class="bright-header__mobile-link">Courses</a>
        <a href="/portfolio" class="bright-header__mobile-link">Portfolio</a>
        <a href="/contact" class="bright-header__mobile-link">Contact</a>
        <a href="/tandc" class="bright-header__mobile-link">Terms & Conditions</a>
      </nav>
      
      <div class="bright-header__mobile-actions">
        <% if (user) { %>
          <a href="/profile" class="bright-header__btn bright-header__btn--primary bright-header__btn--full">Profile</a>
        <% } else { %>
          <a href="/signup" class="bright-header__btn bright-header__btn--primary bright-header__btn--full">Get Started</a>
          <a href="/login" class="bright-header__btn bright-header__btn--ghost bright-header__btn--full">Login</a>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="bright-header__backdrop" id="menuBackdrop"></div>
</header>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap');

  :root {
    --bt-gold: #fbbf24;
    --bt-gold-light: #fcd34d;
    --bt-gold-dark: #f59e0b;
    --bt-black: #0a0a0a;
    --bt-dark: #1a1a1a;
    --bt-gray-900: #171717;
    --bt-gray-800: #262626;
    --bt-gray-700: #404040;
    --bt-gray-600: #525252;
    --bt-gray-400: #a3a3a3;
    --bt-gray-200: #e5e5e5;
    --bt-white: #ffffff;
    --bt-font-display: 'Space Grotesk', sans-serif;
    --bt-font-body: 'Inter', sans-serif;
    --bt-header-height: 180px;
    --bt-body-offset: 144px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    padding-top: var(--bt-body-offset);
  }

  /* Header Base */
  .bright-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid rgba(251, 191, 36, 0.15);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: var(--bt-header-height);
  }

  .bright-header--scrolled {
    background: rgba(10, 10, 10, 0.98);
    border-bottom-color: rgba(251, 191, 36, 0.25);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
  }

  .bright-header__container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0.5rem 1.5rem;
    display: grid;
    grid-template-columns: 200px 1fr auto;
    grid-template-rows: 1fr;
    align-items: center;
    position: relative;
    gap: 1rem;
    height: 100%;
  }

  /* Brand Section - Left aligned */
  .bright-header__brand {
    display: flex;
    align-items: center;
    z-index: 1002;
    grid-column: 1;
    height: 100%;
  }

  /* Logo - 180px (10% smaller than 200px) */
  .bright-header__logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    height: 180px;
    position: relative;
  }

  .bright-header__logo::before {
    content: '';
    position: absolute;
    inset: -10px;
    background: radial-gradient(circle at center, rgba(251, 191, 36, 0.12) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s;
    pointer-events: none;
    border-radius: 20px;
  }

  .bright-header__logo:hover::before {
    opacity: 1;
  }

  .bright-header__logo img {
    height: 100%;
    width: auto;
    max-width: 540px;
    object-fit: contain;
    display: block;
    filter: brightness(1.05) contrast(1.05) drop-shadow(0 4px 15px rgba(251, 191, 36, 0.2));
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), filter 0.4s;
  }

  .bright-header__logo:hover img {
    transform: scale(1.03);
    filter: brightness(1.1) contrast(1.05) drop-shadow(0 6px 25px rgba(251, 191, 36, 0.35));
  }

  /* Center Section - Title and Nav stacked tightly */
  .bright-header__center {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    grid-column: 2;
    z-index: 1002;
    height: 100%;
  }

  /* Title - Centered, compact */
  .bright-header__title {
    font-family: var(--bt-font-display);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--bt-white);
    letter-spacing: 0.06em;
    white-space: nowrap;
    background: linear-gradient(135deg, var(--bt-white) 0%, var(--bt-gold-light) 50%, var(--bt-gold) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    text-transform: uppercase;
    text-align: center;
    line-height: 1.2;
  }

  .bright-header__title::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--bt-gold), transparent);
    border-radius: 2px;
  }

  /* Desktop Navigation - Below title, tight spacing */
  .bright-header__nav {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
  }

  .bright-header__link {
    position: relative;
    padding: 0.5rem 0.875rem;
    color: var(--bt-gray-400);
    text-decoration: none;
    font-family: var(--bt-font-display);
    font-weight: 500;
    font-size: 0.85rem;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: nowrap;
    letter-spacing: 0.01em;
  }

  .bright-header__link::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(251, 191, 36, 0.1);
    border-radius: 8px;
    opacity: 0;
    transform: scale(0.9);
    transition: all 0.3s;
  }

  .bright-header__link::after {
    content: '';
    position: absolute;
    bottom: 4px;
    left: 50%;
    transform: translateX(-50%) scaleX(0);
    width: 16px;
    height: 2px;
    background: var(--bt-gold);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
  }

  .bright-header__link:hover,
  .bright-header__link--active {
    color: var(--bt-gold);
  }

  .bright-header__link:hover::before,
  .bright-header__link--active::before {
    opacity: 1;
    transform: scale(1);
  }

  .bright-header__link:hover::after,
  .bright-header__link--active::after {
    transform: translateX(-50%) scaleX(1);
    width: 24px;
  }

  /* Actions Container - Right side, compact */
  .bright-header__actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    z-index: 1002;
    grid-column: 3;
  }

  /* Buttons - Smaller, tighter */
  .bright-header__btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.625rem 1rem;
    font-family: var(--bt-font-display);
    font-weight: 600;
    font-size: 0.8rem;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    border: none;
    cursor: pointer;
    white-space: nowrap;
    letter-spacing: 0.01em;
  }

  .bright-header__btn--ghost {
    color: var(--bt-gray-200);
    background: transparent;
    border: 1.5px solid var(--bt-gray-700);
  }

  .bright-header__btn--ghost:hover {
    border-color: var(--bt-gold);
    color: var(--bt-gold);
    background: rgba(251, 191, 36, 0.1);
    transform: translateY(-1px);
    box-shadow: 0 3px 15px rgba(251, 191, 36, 0.2);
  }

  .bright-header__btn--primary {
    color: var(--bt-black);
    background: linear-gradient(135deg, var(--bt-gold) 0%, var(--bt-gold-light) 50%, var(--bt-gold) 100%);
    background-size: 200% 200%;
    box-shadow: 0 3px 15px rgba(251, 191, 36, 0.3);
    position: relative;
    overflow: hidden;
  }

  .bright-header__btn--primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
    transition: left 0.5s;
  }

  .bright-header__btn--primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(251, 191, 36, 0.5);
    background-position: 100% 100%;
  }

  .bright-header__btn--primary:hover::before {
    left: 100%;
  }

  .bright-header__btn svg {
    transition: transform 0.3s;
  }

  .bright-header__btn:hover svg {
    transform: translateX(2px);
  }

  /* Mobile Toggle */
  .bright-header__toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: transparent;
    border: 1.5px solid var(--bt-gray-800);
    border-radius: 8px;
    cursor: pointer;
    z-index: 1002;
    gap: 4px;
    transition: all 0.3s;
    grid-column: 3;
  }

  .bright-header__toggle:hover {
    border-color: var(--bt-gold);
    background: rgba(251, 191, 36, 0.1);
  }

  .bright-header__toggle-line {
    width: 18px;
    height: 2px;
    background: var(--bt-gray-200);
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  .bright-header__toggle[aria-expanded="true"] .bright-header__toggle-line:nth-child(1) {
    transform: translateY(6px) rotate(45deg);
    background: var(--bt-gold);
  }

  .bright-header__toggle[aria-expanded="true"] .bright-header__toggle-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .bright-header__toggle[aria-expanded="true"] .bright-header__toggle-line:nth-child(3) {
    transform: translateY(-6px) rotate(-45deg);
    background: var(--bt-gold);
  }

  /* Mobile Menu */
  .bright-header__mobile {
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    max-width: 380px;
    height: 100vh;
    height: 100dvh;
    background: linear-gradient(180deg, var(--bt-black) 0%, var(--bt-dark) 100%);
    z-index: 1001;
    transform: translateX(100%);
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border-left: 1px solid rgba(251, 191, 36, 0.15);
  }

  .bright-header__mobile.active {
    transform: translateX(0);
  }

  .bright-header__mobile-inner {
    padding: 140px 1.5rem 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
  }

  .bright-header__mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .bright-header__mobile-link {
    position: relative;
    padding: 1rem;
    color: var(--bt-gray-400);
    text-decoration: none;
    font-family: var(--bt-font-display);
    font-weight: 500;
    font-size: 1.1rem;
    border-radius: 10px;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid transparent;
  }

  .bright-header__mobile-link::after {
    content: 'â†’';
    opacity: 0;
    transform: translateX(-10px);
    color: var(--bt-gold);
    transition: all 0.3s;
    font-size: 1.2rem;
  }

  .bright-header__mobile-link:hover,
  .bright-header__mobile-link--active {
    color: var(--bt-gold);
    background: rgba(251, 191, 36, 0.08);
    padding-left: 1.25rem;
    border-color: rgba(251, 191, 36, 0.2);
  }

  .bright-header__mobile-link:hover::after,
  .bright-header__mobile-link--active::after {
    opacity: 1;
    transform: translateX(0);
  }

  .bright-header__mobile-actions {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--bt-gray-800);
    margin-top: 1.5rem;
  }

  .bright-header__btn--full {
    width: 100%;
    justify-content: center;
    padding: 0.875rem;
    font-size: 0.95rem;
  }

  .bright-header__backdrop {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(4px);
    z-index: 999;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .bright-header__backdrop.active {
    opacity: 1;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    :root {
      --bt-header-height: 160px;
      --bt-body-offset: 128px;
    }
    
    .bright-header__container {
      padding: 0.5rem 1.25rem;
      gap: 0.75rem;
    }
    
    .bright-header__logo {
      height: 160px;
    }
    
    .bright-header__title {
      font-size: 1.35rem;
    }
    
    .bright-header__link {
      padding: 0.5rem 0.75rem;
      font-size: 0.8rem;
    }
    
    .bright-header__btn {
      padding: 0.5rem 0.875rem;
      font-size: 0.75rem;
    }
  }

  @media (max-width: 1024px) {
    :root {
      --bt-header-height: 100px;
      --bt-body-offset: 80px;
    }
    
    .bright-header__container {
      grid-template-columns: auto 1fr auto;
      gap: 0.75rem;
    }
    
    .bright-header__brand {
      grid-column: 1;
    }
    
    .bright-header__logo {
      height: 100px;
    }
    
    .bright-header__center {
      display: none;
    }
    
    .bright-header__toggle {
      display: flex;
    }

    .bright-header__mobile {
      display: block;
    }

    .bright-header__backdrop {
      display: block;
      pointer-events: none;
    }

    .bright-header__backdrop.active {
      pointer-events: all;
    }
    
    .bright-header__actions {
      display: none;
    }
  }

  @media (max-width: 768px) {
    :root {
      --bt-header-height: 90px;
      --bt-body-offset: 72px;
    }
    
    .bright-header__container {
      padding: 0.5rem 1rem;
    }

    .bright-header__logo {
      height: 80px;
    }

    .bright-header__mobile {
      max-width: none;
    }

    .bright-header__mobile-inner {
      padding: 120px 1.25rem 1.25rem;
    }
  }

  @media (max-width: 480px) {
    :root {
      --bt-header-height: 80px;
      --bt-body-offset: 64px;
    }
    
    .bright-header__logo {
      height: 70px;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .bright-header,
    .bright-header__link,
    .bright-header__btn,
    .bright-header__toggle-line,
    .bright-header__mobile,
    .bright-header__backdrop,
    .bright-header__logo,
    .bright-header__title {
      transition: none;
    }
  }
</style>

<script>
  (function() {
    const header = document.querySelector('.bright-header');
    const mobileToggle = document.getElementById('menuToggle');
    const mobileMenu = document.getElementById('mobileMenu');
    const backdrop = document.getElementById('menuBackdrop');
    const mobileLinks = mobileMenu.querySelectorAll('.bright-header__mobile-link');
    const navLinks = document.querySelectorAll('.bright-header__link');

    let isMobileOpen = false;

    // Mobile Menu
    function toggleMobile() {
      isMobileOpen = !isMobileOpen;
      mobileToggle.setAttribute('aria-expanded', isMobileOpen);
      mobileMenu.classList.toggle('active', isMobileOpen);
      backdrop.classList.toggle('active', isMobileOpen);
      document.body.style.overflow = isMobileOpen ? 'hidden' : '';
    }

    function closeMobile() {
      if (!isMobileOpen) return;
      isMobileOpen = false;
      mobileToggle.setAttribute('aria-expanded', 'false');
      mobileMenu.classList.remove('active');
      backdrop.classList.remove('active');
      document.body.style.overflow = '';
    }

    mobileToggle.addEventListener('click', toggleMobile);
    backdrop.addEventListener('click', closeMobile);
    
    mobileLinks.forEach(link => {
      link.addEventListener('click', closeMobile);
    });

    // Keyboard handling
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeMobile();
      }
    });

    // Scroll Effect - Background only
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          if (window.scrollY > 50) {
            header.classList.add('bright-header--scrolled');
          } else {
            header.classList.remove('bright-header--scrolled');
          }
          ticking = false;
        });
        ticking = true;
      }
    }, { passive: true });

    // Active State
    function setActiveLink() {
      const currentPath = window.location.pathname;
      const allLinks = document.querySelectorAll('.bright-header__link, .bright-header__mobile-link');
      
      allLinks.forEach(link => {
        const href = link.getAttribute('href');
        const isActive = currentPath === href || (href !== '/' && currentPath.startsWith(href));
        
        link.classList.toggle('bright-header__link--active', isActive);
        link.classList.toggle('bright-header__mobile-link--active', isActive);
      });
    }

    setActiveLink();
    window.addEventListener('popstate', setActiveLink);
  })();
</script>