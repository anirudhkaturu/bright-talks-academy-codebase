<header class="site-header">
  <div class="site-header__container">
    <!-- Logo with Image -->
    <a href="/" class="site-header__logo">
      <img src="/imgs/bright-talks-logo.png" alt="Bright Talks Academy">
    </a>

    <!-- Mobile Toggle -->
    <button class="site-header__mobile-toggle" id="menuToggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <!-- Navigation & Actions Wrapper -->
    <div class="site-header__menu-wrapper" id="menuWrapper">
      <nav class="site-header__nav">
        <ul class="site-header__menu">
          <li><a href="/" class="site-header__link">Home</a></li>
          <li><a href="/about" class="site-header__link">About Us</a></li>
          <li><a href="/courses" class="site-header__link">Courses</a></li>
          <li><a href="/portfolio" class="site-header__link">Portfolio</a></li>
          <li><a href="/blogs" class="site-header__link">Blogs</a></li>
          <li><a href="/contact" class="site-header__link">Contact</a></li>
          <li><a href="/tandc" class="site-header__link">T&C</a></li>
        </ul>
      </nav>

      <div class="site-header__actions">
        <% if (user) { %>
          <a href="/profile" class="site-header__btn site-header__btn--profile">Profile</a>
        <% } else { %>
          <a href="/login" class="site-header__btn site-header__btn--login">Login</a>
          <a href="/signup" class="site-header__btn site-header__btn--signup">Sign Up</a>
        <% } %>
      </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div class="site-header__overlay" id="menuOverlay"></div>
  </div>
</header>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@600;700&display=swap');

  :root {
    --primary: #0f172a;
    --primary-light: #1e293b;
    --accent: #f59e0b;
    --accent-light: #fbbf24;
    --accent-gradient: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
    --text: #0f172a;
    --muted: #64748b;
    --light: #f8fafc;
    --white: #ffffff;
    --border: #e2e8f0;
    --radius-sm: 8px;
    --radius-md: 12px;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 20px 25px -5px rgb(0 0 0 / 0.1);
    --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
    --font-display: 'Playfair+Display', Georgia, serif;
  }

  /* Base Header */
  .site-header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: all 0.3s;
  }

  .site-header--scrolled {
    box-shadow: var(--shadow-lg);
    border-bottom-color: transparent;
  }

  .site-header__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
    position: relative;
  }

  /* Logo - Updated for Image */
  .site-header__logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    z-index: 1001;
    height: 100%;
    padding: 0.75rem 0;
    transition: transform 0.3s ease;
  }

  .site-header__logo:hover {
    transform: scale(1.02);
  }

  .site-header__logo img {
    height: 70px;
    width: auto;
    max-width: 200px;
    object-fit: contain;
    display: block;
    transition: filter 0.3s ease;
  }

  .site-header__logo:hover img {
    filter: brightness(1.1);
  }

  /* Desktop Layout */
  .site-header__menu-wrapper {
    display: flex;
    align-items: center;
    flex: 1;
    margin-left: 3rem;
  }

  .site-header__nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .site-header__menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
  }

  .site-header__link {
    text-decoration: none;
    color: var(--muted);
    font-weight: 600;
    font-size: 0.95rem;
    position: relative;
    padding: 0.5rem 0;
    transition: all 0.3s;
    white-space: nowrap;
    font-family: var(--font-sans);
  }

  /* Amber underline effect */
  .site-header__link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 3px;
    background: var(--accent-gradient);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 2px;
  }

  .site-header__link:hover,
  .site-header__link--active {
    color: var(--primary);
  }

  .site-header__link:hover::after,
  .site-header__link--active::after {
    width: 100%;
  }

  /* Buttons */
  .site-header__actions {
    display: flex;
    gap: 0.75rem;
    margin-left: 2rem;
  }

  .site-header__btn {
    padding: 0.625rem 1.5rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s;
    text-align: center;
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
  }

  .site-header__btn--login {
    color: var(--primary);
    border: 2px solid var(--border);
    background: transparent;
  }

  .site-header__btn--login:hover {
    border-color: var(--primary);
    background: var(--primary);
    color: var(--white);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .site-header__btn--signup,
  .site-header__btn--profile {
    background: var(--accent-gradient);
    color: var(--primary);
    border: 2px solid transparent;
    box-shadow: 0 4px 14px rgba(245, 158, 11, 0.3);
  }

  .site-header__btn--signup:hover,
  .site-header__btn--profile:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(245, 158, 11, 0.4);
    filter: brightness(1.05);
  }

  /* Mobile Toggle */
  .site-header__mobile-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 44px;
    height: 44px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1002;
    gap: 6px;
    border-radius: var(--radius-sm);
    transition: background 0.3s;
  }

  .site-header__mobile-toggle:hover {
    background: var(--light);
  }

  .hamburger-line {
    width: 24px;
    height: 2.5px;
    background: var(--primary);
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: block;
    transform-origin: center;
  }

  /* Hamburger Animation to X */
  .site-header__mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(1) {
    transform: translateY(8.5px) rotate(45deg);
  }

  .site-header__mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .site-header__mobile-toggle[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: translateY(-8.5px) rotate(-45deg);
  }

  /* Mobile Overlay */
  .site-header__overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(15, 23, 42, 0.5);
    backdrop-filter: blur(4px);
    z-index: 998;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .site-header__overlay.active {
    opacity: 1;
  }

  /* MOBILE STYLES */
  @media (max-width: 968px) {
    .site-header__container {
      height: 70px;
      padding: 0 1.25rem;
    }

    /* Mobile Logo Sizing */
    .site-header__logo {
      padding: 0.5rem 0;
    }

    .site-header__logo img {
      height: 40px;
      max-width: 160px;
    }

    .site-header__mobile-toggle {
      display: flex;
    }

    .site-header__overlay {
      display: block;
      pointer-events: none;
    }

    .site-header__overlay.active {
      pointer-events: all;
    }

    /* Mobile Menu Slide-in */
    .site-header__menu-wrapper {
      position: fixed;
      top: 0;
      right: 0;
      width: min(320px, 85vw);
      height: 100vh;
      height: 100dvh;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      flex-direction: column;
      justify-content: flex-start;
      align-items: stretch;
      padding: 100px 1.5rem 2rem;
      margin-left: 0;
      gap: 0;
      transform: translateX(100%);
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      overflow-y: auto;
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.3);
      z-index: 999;
    }

    .site-header__menu-wrapper.active {
      transform: translateX(0);
    }

    /* Mobile Navigation */
    .site-header__nav {
      width: 100%;
    }

    .site-header__menu {
      flex-direction: column;
      align-items: stretch;
      gap: 0.5rem;
      width: 100%;
      margin-bottom: 2rem;
    }

    .site-header__menu li {
      width: 100%;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .site-header__link {
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.1rem;
      padding: 1rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-radius: var(--radius-sm);
      transition: all 0.2s;
    }

    .site-header__link::after {
      display: none;
    }

    .site-header__link::before {
      content: 'â†’';
      opacity: 0;
      transform: translateX(-10px);
      transition: all 0.3s;
      color: var(--accent);
    }

    .site-header__link:hover,
    .site-header__link--active {
      color: var(--accent);
      background: rgba(245, 158, 11, 0.1);
      padding-left: 1.25rem;
    }

    .site-header__link:hover::before,
    .site-header__link--active::before {
      opacity: 1;
      transform: translateX(0);
    }

    .site-header__link--active {
      background: rgba(245, 158, 11, 0.15);
      font-weight: 700;
    }

    /* Mobile Actions */
    .site-header__actions {
      flex-direction: column;
      width: 100%;
      gap: 0.75rem;
      margin-left: 0;
      margin-top: auto;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .site-header__btn {
      width: 100%;
      padding: 1rem;
      font-size: 1rem;
      min-height: 48px;
    }

    .site-header__btn--login {
      background: transparent;
      color: var(--white);
      border: 2px solid rgba(255, 255, 255, 0.3);
      order: 2;
    }

    .site-header__btn--login:hover {
      background: rgba(255, 255, 255, 0.1);
      border-color: var(--accent);
      color: var(--accent);
    }

    .site-header__btn--signup,
    .site-header__btn--profile {
      background: var(--accent-gradient);
      color: var(--primary);
      border: none;
      order: 1;
    }

    .site-header__btn--signup:hover,
    .site-header__btn--profile:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(245, 158, 11, 0.3);
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }
</style>

<script>
  (function() {
    const header = document.querySelector('.site-header');
    const menuToggle = document.getElementById('menuToggle');
    const menuWrapper = document.getElementById('menuWrapper');
    const menuOverlay = document.getElementById('menuOverlay');
    const menuLinks = menuWrapper.querySelectorAll('a');

    if (!menuToggle || !menuWrapper) return;

    let isOpen = false;

    function toggleMenu() {
      isOpen = !isOpen;
      menuToggle.setAttribute('aria-expanded', isOpen);
      menuWrapper.classList.toggle('active', isOpen);
      menuOverlay.classList.toggle('active', isOpen);
      document.body.style.overflow = isOpen ? 'hidden' : '';
    }

    function closeMenu() {
      if (!isOpen) return;
      isOpen = false;
      menuToggle.setAttribute('aria-expanded', 'false');
      menuWrapper.classList.remove('active');
      menuOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    // Toggle click
    menuToggle.addEventListener('click', toggleMenu);

    // Overlay click to close
    menuOverlay.addEventListener('click', closeMenu);

    // Close when clicking links
    menuLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        closeMenu();
      }
    });

    // Handle resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        if (window.innerWidth > 968 && isOpen) {
          closeMenu();
        }
      }, 100);
    });

    // Scroll effect for header
    let lastScroll = 0;
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;

      if (currentScroll > 50) {
        header.classList.add('site-header--scrolled');
      } else {
        header.classList.remove('site-header--scrolled');
      }

      lastScroll = currentScroll;
    });

    // Active state logic
    function setActiveLink() {
      const currentPath = window.location.pathname;
      const navLinks = document.querySelectorAll('.site-header__link');

      navLinks.forEach(link => {
        link.classList.remove('site-header__link--active');
        const linkPath = link.getAttribute('href');

        // Exact match or starts with (for nested pages like /courses/123)
        if (currentPath === linkPath ||
                (linkPath !== '/' && currentPath.startsWith(linkPath))) {
          link.classList.add('site-header__link--active');
        }
      });
    }

    setActiveLink();
    window.addEventListener('popstate', setActiveLink);

    // Trap focus in mobile menu when open
    menuWrapper.addEventListener('keydown', (e) => {
      if (e.key !== 'Tab' || !isOpen) return;

      const focusableElements = menuWrapper.querySelectorAll(
              'a[href], button, input, textarea, select, details, [tabindex]:not([tabindex="-1"])'
      );

      const firstElement = focusableElements[0];
      const lastElement = focusableElements[focusableElements.length - 1];

      if (e.shiftKey && document.activeElement === firstElement) {
        lastElement.focus();
        e.preventDefault();
      } else if (!e.shiftKey && document.activeElement === lastElement) {
        firstElement.focus();
        e.preventDefault();
      }
    });
  })();
</script>