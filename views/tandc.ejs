    }

    .terms-content ul {
      margin-left: 20px;
      margin-bottom: 15px;
    }

    .terms-content a {
      color: var(--accent);
      text-decoration: underline;
      transition: color 0.2s ease;
    }

    .terms-content a:hover {
      color: var(--primary);
    }

