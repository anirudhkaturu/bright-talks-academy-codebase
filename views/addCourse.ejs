  const previewTitle = document.getElementById('preview-title');
  const previewDesc = document.getElementById('preview-desc');
  const previewPrice = document.getElementById('preview-price');
  const previewDuration = document.getElementById('preview-duration');

  titleInput.addEventListener('input', (e) => {
    previewTitle.textContent = e.target.value || 'Your course name will appear here...';
  });

  priceInput.addEventListener('input', (e) => {
    previewPrice.textContent = 'â‚¹' + (e.target.value || '0.00');
  });

  durationInput.addEventListener('input', (e) => {
    const words = e.target.value.split(' ').slice(0, 15).join(' ');
    previewDesc.textContent = words + (e.target.value.split(' ').length > 15 ? '...' : '') || 'Course description preview...';
  });

  // File upload feedback
  function updateFileName(input) {
