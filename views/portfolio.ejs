    /* ------------------------------ CONTENT SECTIONS --------------------------------*/
    .section {
      max-width: 1200px;
      margin: 0 auto;
      padding: 5rem 1.5rem;
    }

    .section-header {
      text-align: center;
      margin-bottom: 3rem;
    }

    .section-label {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--accent);
      margin-bottom: 1rem;
    }

    .section-label::before {
      content: '';
      width: 24px;
      height: 2px;
      background: var(--accent);
    }

    .section-title {
      font-family: var(--font-display);
      font-size: clamp(1.75rem, 4vw, 2.5rem);
      color: var(--primary);
      margin-bottom: 1rem;
    }

    .section-subtitle {
      color: var(--muted);
      font-size: 1.125rem;
      max-width: 600px;
      margin: 0 auto;
    }

    /* ------------------------------ ABOUT SECTION --------------------------------*/
    .about-section {
      background: var(--white);
      margin-top: -4rem;
      position: relative;
      z-index: 10;
      border-radius: var(--radius-xl) var(--radius-xl) 0 0;
      padding: 4rem 2rem;
      box-shadow: var(--shadow-lg);
    }

    .about-content {
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }

    .lead-text {
      font-family: var(--font-display);
      font-size: 1.5rem;
      color: var(--primary);
      line-height: 1.6;
      margin-bottom: 1.5rem;
      font-style: italic;
    }

    .about-text {
      font-size: 1.125rem;
      color: var(--text-light);
      line-height: 1.8;
      margin-bottom: 1.5rem;
    }

    .certification-highlight {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      background: linear-gradient(to right, #fffbeb, #fef3c7);
      padding: 1rem 2rem;
      border-radius: var(--radius-md);
      margin-top: 1.5rem;
      border: 1px solid var(--accent);
      font-weight: 600;
      color: var(--primary);
    }

    /* ------------------------------ CERTIFICATIONS --------------------------------*/
    .certs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    .cert-card {
      background: var(--white);
      border-radius: var(--radius-lg);
      padding: 2.5rem;
      box-shadow: var(--shadow-md);
      border: 1px solid var(--border);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .cert-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--accent-gradient);
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }

    .cert-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-xl);
    }

    .cert-card:hover::before {
      transform: scaleX(1);
    }

    .cert-icon {
      width: 64px;
      height: 64px;
      background: rgba(245, 158, 11, 0.1);
      border-radius: var(--radius-md);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 2rem;
      margin-bottom: 1.5rem;
      transition: all 0.3s ease;
    }

    .cert-card:hover .cert-icon {
      background: var(--accent-gradient);
      transform: scale(1.1);
    }

    .cert-card h3 {
      font-family: var(--font-display);
      font-size: 1.25rem;
      color: var(--primary);
      margin-bottom: 0.5rem;
    }

    .cert-card .org {
      font-weight: 600;
      color: var(--accent);
      font-size: 0.9375rem;
      margin-bottom: 0.5rem;
    }

    .cert-card .detail {
      font-size: 0.875rem;
      color: var(--muted);
    }

    .cert-badge {
      display: inline-block;
      background: var(--primary);
      color: white;
      padding: 0.25rem 0.75rem;
      border-radius: var(--radius-sm);
      font-size: 0.75rem;
      font-weight: 600;
      margin-top: 1rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* ------------------------------ EXPERTISE GRID --------------------------------*/
    .expertise-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 3rem;
    }

    .expertise-card {
      background: var(--white);
      border: 2px solid var(--border);
      border-radius: var(--radius-lg);
      padding: 2rem;
      text-align: center;
      transition: all 0.3s ease;
      position: relative;
    }

    .expertise-card::after {
      content: '‚Üí';
      position: absolute;
      bottom: 1rem;
      right: 1rem;
      opacity: 0;
      color: var(--accent);
      transition: all 0.3s ease;
    }

    .expertise-card:hover {
      border-color: var(--accent);
      transform: translateY(-5px);
      box-shadow: var(--shadow-lg);
    }

    .expertise-card:hover::after {
      opacity: 1;
      right: 1.5rem;
    }

    .expertise-icon {
      width: 56px;
      height: 56px;
      background: var(--accent-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.25rem;
      font-size: 1.5rem;
    }

    .expertise-card p {
      font-weight: 600;
      color: var(--primary);
      font-size: 1rem;
      line-height: 1.4;
    }

    /* ------------------------------ METHODOLOGY --------------------------------*/
    .methodology-section {
      background: var(--white);
    }

    .method-steps {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    .method-step {
      text-align: center;
      padding: 2rem;
      position: relative;
    }

    .step-number {
      width: 48px;
      height: 48px;
      background: var(--accent-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      font-family: var(--font-display);
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--primary);
    }

    .method-step h3 {
      font-family: var(--font-display);
      font-size: 1.25rem;
      color: var(--primary);
      margin-bottom: 0.75rem;
    }

    .method-step p {
      color: var(--muted);
      font-size: 0.9375rem;
      line-height: 1.6;
    }

    /* ------------------------------ PROGRAMS --------------------------------*/
    .programs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
      margin-top: 3rem;
    }

    .program-card {
      background: var(--white);
      border-radius: var(--radius-lg);
      padding: 2rem;
      box-shadow: var(--shadow-md);
      border-left: 4px solid var(--accent);
      transition: all 0.3s ease;
    }

    .program-card:hover {
      transform: translateX(10px);
      box-shadow: var(--shadow-xl);
    }

    .program-card h3 {
      font-family: var(--font-display);
      font-size: 1.125rem;
      color: var(--primary);
      margin-bottom: 0.5rem;
    }

    .program-card .duration {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: var(--light);
      padding: 0.375rem 0.875rem;
      border-radius: var(--radius-sm);
      font-size: 0.875rem;
      color: var(--muted);
      margin-bottom: 0.75rem;
    }

    .program-card p {
      color: var(--text-light);
      font-size: 0.9375rem;
      line-height: 1.5;
    }

    .min-participants {
      text-align: center;
      margin-top: 2.5rem;
      padding: 1.5rem;
      background: var(--primary);
      color: white;
      border-radius: var(--radius-md);
      font-weight: 600;
    }

    /* ------------------------------ INSTITUTIONS --------------------------------*/
    .institutions-section {
      background: linear-gradient(to right, #fffbeb, #fef3c7);
      padding: 4rem 2rem;
      margin: 0 1.5rem 4rem;
      border-radius: var(--radius-xl);
      border: 1px dashed var(--accent);
    }

    .institutions-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .institution-item {
      background: var(--white);
      padding: 1.5rem;
      border-radius: var(--radius-md);
      text-align: center;
      font-weight: 600;
      color: var(--primary);
      box-shadow: var(--shadow-sm);
      transition: all 0.2s ease;
    }

    .institution-item:hover {
      transform: translateY(-3px);
      box-shadow: var(--shadow-md);
    }

    /* ------------------------------ CTA SECTION --------------------------------*/
    .trainer-cta {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      padding: 5rem 2rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .trainer-cta::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(245, 158, 11, 0.1) 0%, transparent 70%);
    }

    .cta-content {
      position: relative;
      z-index: 1;
      max-width: 700px;
      margin: 0 auto;
    }

    .trainer-cta h2 {
      font-family: var(--font-display);
      font-size: clamp(2rem, 5vw, 3rem);
      color: white;
      margin-bottom: 1.5rem;
    }

    .contact-details {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
      margin: 2rem 0;
    }

    .contact-item-large {
      display: flex;
      align-items: center;
      gap: 1rem;
      color: rgba(255, 255, 255, 0.9);
      font-size: 1.125rem;
    }

    .contact-icon-large {
      width: 48px;
      height: 48px;
      background: rgba(245, 158, 11, 0.2);
      border-radius: var(--radius-md);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
    }

    .cta-btn-large {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      background: var(--accent-gradient);
      color: var(--primary);
      padding: 1.25rem 2.5rem;
      border-radius: var(--radius-md);
      font-weight: 700;
      font-size: 1.125rem;
      text-decoration: none;
      transition: all 0.2s;
      margin-top: 1rem;
      box-shadow: 0 10px 30px -10px rgba(245, 158, 11, 0.3);
    }

    .cta-btn-large:hover {
      transform: translateY(-2px);
      box-shadow: 0 20px 40px -10px rgba(245, 158, 11, 0.4);
    }

    /* ------------------------------ RESPONSIVE --------------------------------*/
    @media (max-width: 768px) {
      .trainer-hero {
        padding: 4rem 1.5rem 8rem;
      }

      .trainer-stats {
        gap: 2rem;
      }

      .stat-number {
        font-size: 2.5rem;
      }

      .section {
        padding: 3rem 1rem;
      }

      .certs-grid,
      .expertise-grid {
        grid-template-columns: 1fr;
      }

      .institutions-section {
        margin: 0 1rem 3rem;
      }

      .contact-details {
        flex-direction: column;
        gap: 1.5rem;
      }
    }

    /* ------------------------------ ANIMATIONS --------------------------------*/
    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .cert-card,
    .expertise-card,
    .program-card,
    .method-step {
      animation: slideUp 0.6s ease-out;
    }

    .reveal {
      opacity: 0;
      transform: translateY(30px);
      transition: all 0.8s ease;
    }

    .reveal.active {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
</head>

