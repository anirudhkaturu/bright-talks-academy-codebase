      --primary-light: #1e293b;
      --accent: #f59e0b;
      --accent-light: #fbbf24;
      --accent-gradient: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
      --text: #0f172a;
      --text-light: #334155;
      --muted: #64748b;
      --light: #f8fafc;
      --white: #ffffff;
      --border: #e2e8f0;
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
      --radius-xl: 24px;
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
