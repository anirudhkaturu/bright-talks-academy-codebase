  <style>
    /* ------------------------------
       PORTFOLIO PAGE STYLES
    --------------------------------*/
    .hero-small {
      background: var(--light);
      text-align: center;
      padding: 80px 20px;
    }
    .hero-small h1 {
      font-size: 3rem;
      color: var(--primary);
      margin-bottom: 12px;
    }
    .hero-small p {
      font-size: 1.2rem;
      color: var(--muted);
      max-width: 700px;
      margin: 0 auto;
      line-height: 1.6;
    }
    .container-narrow {
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 20px;
    }
    .portfolio-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
      margin-top: 30px;
    }
    .program-card {
      background: var(--white);
      border-radius: 12px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.05);
      padding: 25px 20px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .program-card h3 {
      font-size: 1.4rem;
      color: var(--primary);
      margin-bottom: 12px;
    }
    .program-card p {
      color: var(--muted);
      margin-bottom: 8px;
      line-height: 1.5;
    }
    .program-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    .experience.impact {
      background: var(--light);
      padding: 60px 20px;
      text-align: center;
    }
    .experience.impact h2 {
      font-size: 2.4rem;
      color: var(--primary);
      margin-bottom: 20px;
    }
    .experience.impact ul {
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px 40px;
      margin-bottom: 20px;
      padding: 0;
    }
    .experience.impact ul li {
      background: var(--white);
      border-radius: 10px;
      padding: 15px 20px;
      color: var(--muted);
      box-shadow: 0 4px 15px rgba(0,0,0,0.05);
      min-width: 220px;
      font-weight: 500;
    }
    .experience.impact a {
      color: var(--primary);
      text-decoration: underline;
    }
    .portfolio-cta {
      background: var(--primary);
      color: #fff;
      text-align: center;
      padding: 60px 20px;
      border-radius: 12px;
      margin: 60px 20px 40px;
    }
    .portfolio-cta h2 {
      font-size: 2.6rem;
      margin-bottom: 16px;
    }
    .portfolio-cta p {
      font-size: 1.2rem;
      max-width: 700px;
      margin: 0 auto 25px;
      line-height: 1.6;
      color: #f3f4f6;
    }
    .portfolio-cta .cta {
      display: inline-block;
      background: var(--accent);
      color: #000;
      padding: 14px 28px;
      border-radius: 8px;
      font-weight: 600;
      text-decoration: none;
      transition: transform 0.2s ease;
    }
    .portfolio-cta .cta:hover {
      transform: translateY(-2px);
    }
    @media (max-width: 900px) {
      .hero-small h1 { font-size: 2.4rem; }
      .hero-small p { font-size: 1.1rem; }
    }
    @media (max-width: 600px) {
      .portfolio-grid { gap: 20px; }
      .experience.impact ul { flex-direction: column; gap: 15px; }
      .portfolio-cta h2 { font-size: 2rem; }
      .portfolio-cta p { font-size: 1rem; }
    }
  </style>
</head>

