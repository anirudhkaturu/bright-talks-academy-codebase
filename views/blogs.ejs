<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Blogs | The Bright Talks Academy</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

<!-- HEADER -->
<%- include('partials/header') %>

<!-- HERO -->
<section class="hero hero-small">
  <div>
    <h1>Blogs</h1>
    <p>Insights, tips, and learning resources from The Bright Talks Academy</p>
  </div>
</section>

<!-- BLOG CARDS -->
<section class="portfolio">
  <h2>All Blogs</h2>

  <% if (blogs && blogs.length > 0) { %>
    <div class="portfolio-grid">
      <% blogs.forEach(blog => { %>
        <div class="program">
          <h3><%= blog.title %></h3>
          <% if(blog.snippet) { %>
            <p><%= blog.snippet %></p>
          <% } %>
          <a href="/blogs/<%= blog._id %>" class="cta">Read More</a>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="empty">No blogs found.</p>
  <% } %>
</section>

<!-- FOOTER -->
<%- include('partials/footer') %>

</body>
</html>
