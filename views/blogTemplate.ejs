<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> | The Bright Talks Academy</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,600;0,700;1,600&display=swap" rel="stylesheet">

  <style>
    /* ------------------------------ ROOT VARIABLES --------------------------------*/
    :root {
      --primary: #0f172a;
      --primary-light: #1e293b;
      --accent: #f59e0b;
      --accent-light: #fbbf24;
      --accent-gradient: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
      --text: #0f172a;
      --text-light: #334155;
      --muted: #64748b;
      --border: #e2e8f0;
      --bg: #f8fafc;
      --card-bg: #ffffff;
      --code-bg: #f1f5f9;
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 20px 25px -5px rgb(0 0 0 / 0.1);

      --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
      --font-display: 'Playfair Display', Georgia, serif;
    }

    /* ------------------------------ RESET & BASE --------------------------------*/
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: var(--font-sans);
      background: var(--bg);
      color: var(--text);
      line-height: 1.6;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    ::selection {
      background: var(--accent);
      color: white;
    }

    /* ------------------------------ PROGRESS BAR --------------------------------*/
    .progress-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: transparent;
      z-index: 1000;
    }

    .progress-bar {
      height: 100%;
      background: var(--accent-gradient);
      width: 0%;
      transition: width 0.1s;
    }

    /* ------------------------------ HERO SECTION --------------------------------*/
    .article-hero {
      position: relative;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      padding: 8rem 2rem 4rem;
      overflow: hidden;
    }

    .article-hero::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(245, 158, 11, 0.15) 0%, transparent 70%);
      pointer-events: none;
    }

    .article-hero-content {
      position: relative;
      z-index: 1;
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }

    .breadcrumb {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      color: rgba(255, 255, 255, 0.7);
      margin-bottom: 2rem;
      text-decoration: none;
      transition: color 0.2s;
    }

    .breadcrumb:hover {
      color: var(--accent);
    }

    .breadcrumb svg {
      width: 16px;
      height: 16px;
    }

    .article-hero h1 {
      font-family: var(--font-display);
      font-size: clamp(2rem, 5vw, 3.5rem);
      font-weight: 700;
      color: white;
      line-height: 1.2;
      margin-bottom: 2rem;
      letter-spacing: -0.02em;
    }

    .article-meta {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      flex-wrap: wrap;
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.9375rem;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .meta-item svg {
      width: 18px;
      height: 18px;
      color: var(--accent);
    }

    /* ------------------------------ ARTICLE CONTAINER --------------------------------*/
    .article-wrapper {
      max-width: 800px;
      margin: -3rem auto 0;
      padding: 0 1.5rem 6rem;
      position: relative;
      z-index: 10;
    }

    .article-card {
      background: var(--card-bg);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-lg);
      padding: 3rem;
      border: 1px solid var(--border);
    }

    /* ------------------------------ ARTICLE CONTENT --------------------------------*/
    .article-content {
      font-size: 1.125rem;
      line-height: 1.8;
      color: var(--text-light);
    }

    .article-content > * + * {
      margin-top: 1.75rem;
    }

    .article-content p {
      margin-bottom: 1.75rem;
    }

    .article-content h2 {
      font-family: var(--font-display);
      font-size: 1.875rem;
      color: var(--primary);
      margin-top: 3rem;
      margin-bottom: 1.25rem;
      line-height: 1.3;
      font-weight: 700;
    }

    .article-content h3 {
      font-family: var(--font-display);
      font-size: 1.5rem;
      color: var(--primary);
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      line-height: 1.4;
      font-weight: 600;
    }

    .article-content h4 {
      font-size: 1.25rem;
      color: var(--primary);
      margin-top: 2rem;
      margin-bottom: 0.75rem;
      font-weight: 600;
    }

    .article-content ul,
    .article-content ol {
      margin: 1.5rem 0;
      padding-left: 1.5rem;
    }

    .article-content li {
      margin-bottom: 0.75rem;
      position: relative;
    }

    .article-content ul li::marker {
      color: var(--accent);
      font-size: 1.2rem;
    }

    .article-content blockquote {
      margin: 2.5rem 0;
      padding: 1.5rem 2rem;
      border-left: 4px solid var(--accent);
      background: linear-gradient(to right, #fffbeb, #fef3c7);
      border-radius: 0 var(--radius-md) var(--radius-md) 0;
      font-family: var(--font-display);
      font-size: 1.25rem;
      font-style: italic;
      color: var(--primary);
      line-height: 1.6;
    }

    .article-content blockquote p {
      margin: 0;
    }

    .article-content strong {
      color: var(--primary);
      font-weight: 600;
    }

    .article-content a {
      color: var(--accent);
      text-decoration: none;
      border-bottom: 2px solid rgba(245, 158, 11, 0.3);
      transition: all 0.2s;
    }

    .article-content a:hover {
      border-bottom-color: var(--accent);
      color: var(--primary);
    }

    .article-content img {
      max-width: 100%;
      height: auto;
      border-radius: var(--radius-md);
      margin: 2.5rem 0;
      box-shadow: var(--shadow-md);
    }

    .article-content figure {
      margin: 2.5rem 0;
    }

    .article-content figcaption {
      text-align: center;
      font-size: 0.875rem;
      color: var(--muted);
      margin-top: 0.75rem;
      font-style: italic;
    }

    /* CODE BLOCKS */
    .article-content pre {
      background: var(--code-bg);
      padding: 1.5rem;
      border-radius: var(--radius-md);
      overflow-x: auto;
      margin: 2rem 0;
      font-size: 0.9375rem;
      line-height: 1.6;
      border: 1px solid var(--border);
    }

    .article-content code {
      background: var(--code-bg);
      padding: 0.2rem 0.4rem;
      border-radius: var(--radius-sm);
      font-size: 0.9em;
      color: #ec4899;
      font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, monospace;
    }

    .article-content pre code {
      background: none;
      padding: 0;
      color: inherit;
      font-size: inherit;
    }

    /* ------------------------------ AUTHOR BOX --------------------------------*/
    .author-box {
      margin-top: 4rem;
      padding: 2rem;
      background: var(--bg);
      border-radius: var(--radius-lg);
      border: 1px solid var(--border);
      display: flex;
      gap: 1.5rem;
      align-items: center;
    }

    .author-avatar {
      width: 64px;
      height: 64px;
      background: var(--accent-gradient);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.75rem;
      flex-shrink: 0;
    }

    .author-info h4 {
      font-family: var(--font-display);
      font-size: 1.25rem;
      color: var(--primary);
      margin-bottom: 0.25rem;
    }

    .author-info p {
      color: var(--muted);
      font-size: 0.9375rem;
      line-height: 1.5;
      margin: 0;
    }

    /* ------------------------------ NAVIGATION --------------------------------*/
    .article-nav {
      margin-top: 4rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border);
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 1rem;
    }

    .nav-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--muted);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s;
    }

    .nav-link:hover {
      color: var(--accent);
    }

    .nav-link svg {
      width: 20px;
      height: 20px;
    }

    .nav-link.prev svg {
      transform: rotate(180deg);
    }

    /* ------------------------------ SHARE SECTION --------------------------------*/
    .share-section {
      position: fixed;
      left: 2rem;
      top: 50%;
      transform: translateY(-50%);
      display: flex;
      flex-direction: column;
      gap: 1rem;
      z-index: 100;
    }

    .share-btn {
      width: 44px;
      height: 44px;
      border-radius: 50%;
      background: white;
      border: 1px solid var(--border);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--muted);
      cursor: pointer;
      transition: all 0.2s;
      box-shadow: var(--shadow-sm);
    }

    .share-btn:hover {
      background: var(--accent);
      color: white;
      border-color: var(--accent);
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(245, 158, 11, 0.3);
    }

    /* ------------------------------ RESPONSIVE --------------------------------*/
    @media (max-width: 1024px) {
      .share-section {
        position: static;
        flex-direction: row;
        justify-content: center;
        transform: none;
        margin: 3rem 0;
        padding: 0 1.5rem;
      }
    }

    @media (max-width: 768px) {
      .article-hero {
        padding: 6rem 1.5rem 3rem;
      }

      .article-wrapper {
        margin-top: -2rem;
        padding: 0 1rem 4rem;
      }

      .article-card {
        padding: 2rem 1.5rem;
      }

      .article-content {
        font-size: 1.0625rem;
      }

      .article-content h2 {
        font-size: 1.5rem;
      }

      .article-content h3 {
        font-size: 1.25rem;
      }

      .article-content blockquote {
        padding: 1.25rem;
        font-size: 1.125rem;
      }

      .author-box {
        flex-direction: column;
        text-align: center;
        padding: 1.5rem;
      }

      .article-nav {
        flex-direction: column;
        gap: 1.5rem;
      }

      .nav-link {
        width: 100%;
        justify-content: center;
      }
    }

    /* ------------------------------ ANIMATIONS --------------------------------*/
    .article-card {
      animation: slideUp 0.6s ease-out;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Reading time estimate badge */
    .reading-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: rgba(255, 255, 255, 0.1);
      padding: 0.5rem 1rem;
      border-radius: var(--radius-sm);
      font-size: 0.875rem;
      color: white;
      backdrop-filter: blur(10px);
    }
  </style>
</head>
<body>

<%- include('partials/header') %>

<!-- Reading Progress Bar -->
<div class="progress-container">
  <div class="progress-bar" id="progressBar"></div>
</div>

<!-- Social Share Buttons (Desktop) -->
<div class="share-section">
  <button class="share-btn" onclick="shareArticle('twitter')" title="Share on Twitter">
    <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path></svg>
  </button>
  <button class="share-btn" onclick="shareArticle('facebook')" title="Share on Facebook">
    <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path></svg>
  </button>
  <button class="share-btn" onclick="shareArticle('linkedin')" title="Share on LinkedIn">
    <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd"></path></svg>
  </button>
  <button class="share-btn" onclick="copyLink()" title="Copy Link">
    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
  </button>
</div>

<!-- HERO -->
<header class="article-hero">
  <div class="article-hero-content">
    <a href="/blogs" class="breadcrumb">
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to all blogs
    </a>

    <h1><%= title %></h1>

    <div class="article-meta">
      <div class="meta-item">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <% if (typeof createdAt !== 'undefined') { %>
          <%= new Date(createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
        <% } else { %>
          The Bright Talks Academy
        <% } %>
      </div>

      <div class="meta-item">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span id="readingTime">3 min read</span>
      </div>
    </div>
  </div>
</header>

<!-- ARTICLE CONTENT -->
<main class="article-wrapper">
  <article class="article-card">
    <div class="article-content" id="articleContent">
      <%- content %>
    </div>

    <!-- Author Box -->
    <div class="author-box">
      <div class="author-avatar">✍️</div>
      <div class="author-info">
        <h4>The Bright Talks Academy</h4>
        <p>Empowering individuals to communicate with confidence and clarity through expert training and personalized coaching.</p>
      </div>
    </div>

    <!-- Article Navigation -->
    <nav class="article-nav">
      <a href="/blogs" class="nav-link prev">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
        All Articles
      </a>

      <a href="/contact" class="nav-link" style="color: var(--accent);">
        Enquire Now
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </nav>
  </article>
</main>

<%- include('partials/footer') %>

<script>
  // Reading progress bar
  window.onscroll = function() {
    let winScroll = document.body.scrollTop || document.documentElement.scrollTop;
    let height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    let scrolled = (winScroll / height) * 100;
    document.getElementById("progressBar").style.width = scrolled + "%";
  };

  // Calculate reading time based on content
  function calculateReadingTime() {
    const content = document.getElementById('articleContent').innerText;
    const words = content.trim().split(/\s+/).length;
    const minutes = Math.ceil(words / 200);
    document.getElementById('readingTime').textContent = minutes + ' min read';
  }

  calculateReadingTime();

  // Share functionality
  function shareArticle(platform) {
    const url = window.location.href;
    const text = document.title;

    let shareUrl;
    switch(platform) {
      case 'twitter':
        shareUrl = `https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(text)}`;
        break;
      case 'facebook':
        shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;
        break;
      case 'linkedin':
        shareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`;
        break;
    }

    if (shareUrl) {
      window.open(shareUrl, '_blank', 'width=600,height=400');
    }
  }

  function copyLink() {
    navigator.clipboard.writeText(window.location.href).then(() => {
      alert('Link copied to clipboard!');
    });
  }
</script>

</body>
</html>