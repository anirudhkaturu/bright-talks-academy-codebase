<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>The Bright Talks Academy</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<header class="site-header">
  <div class="logo">
    <img src="/imgs/bright-talks-logo.png" alt="Bright Talks Academy">
  </div>

  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/portfolio">Portfolio</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/tandc">Terms & Conditions</a></li>
    </ul>
  </nav>

  <a href="/book" class="btn-call">Book a Call</a>
</header>

<!-- HERO -->
<section class="hero">
  <div>
    <h1>Transform Hesitation into Confident Communication</h1>
    <p>
      Unlock your potential with THE BRIGHT TALKS ACADEMY. Through expert coaching,
      engaging practice, and personalised feedback, we help you speak with clarity,
      confidence, and impact.
    </p>
    <a href="/contact" class="cta">Learn more</a>
  </div>
  <img src="/imgs/public-speaking.webp" alt="Public Speaking">
</section>

<!-- PROGRAMS -->
<section>
  <h2>Our Expert Training Programs</h2>

  <% 
    const programs = [
      {
        title: 'Advanced Public Speaking',
        description: 'Overcome stage fear and master impactful delivery.'
      },
      {
        title: 'Personality Development',
        description: 'Build confidence, body language, and professional presence.'
      },
      {
        title: 'Corporate Communication',
        description: 'Speak confidently in meetings, interviews, and leadership roles.'
      }
    ];
  %>

  <div class="programs">
    <% programs.forEach(program => { %>
      <div class="program">
        <h3><%= program.title %></h3>
        <p><%= program.description %></p>
      </div>
    <% }) %>
  </div>
</section>

<!-- EXPERIENCE -->
<section class="experience">
  <h2>Our Experience</h2>

  <% 
    const experience = [
      'Public Speaking Trainer – Helping learners overcome stage fear',
      'Corporate Communication Coach – Enhancing workplace communication',
      'Personality Development Mentor – Building confidence and presence',
      'Body Language Skills Trainer – Strengthening non-verbal communication'
    ];
  %>

  <ul>
    <% experience.forEach(item => { %>
      <li><%= item %></li>
    <% }) %>
  </ul>
</section>

<!-- TESTIMONIALS -->
<section class="testimonials">
  <h2>What Our Speakers Say</h2>

  <% 
    const testimonials = [
      {
        name: 'Shanthi Kiran, Guntur',
        message: 'The training truly transformed my communication skills.'
      },
      {
        name: 'Hadassa',
        message: 'Now I speak confidently in meetings and interviews.'
      },
      {
        name: 'Tagore Subhash',
        message: 'Highly recommended for students and professionals.'
      }
    ];
  %>

  <% testimonials.forEach(t => { %>
    <div class="testimonial">
      “<%= t.message %>”
      <strong>– <%= t.name %></strong>
    </div>
  <% }) %>
</section>

<!-- FOOTER -->
<footer>
  <p>thebrighttalksacademy@gmail.com</p>
  <p>© 2026 The Bright Talks Academy | Developed by Sinfoxmedia</p>
</footer>

</body>
</html>
