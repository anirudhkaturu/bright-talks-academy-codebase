      <svg class="breadcrumb-separator" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <span style="color: var(--muted);">Edit Blog</span>
    </nav>

    <h1 class="page-title">
      <div class="page-title-icon">‚úèÔ∏è</div>
      Edit Blog Post
    </h1>
    <p class="page-subtitle">Update your content or manage blog settings.</p>
  </div>

  <!-- Edit Layout -->
  <div class="edit-layout">
    <!-- Main Editor -->
    <div class="editor-card">
      <div class="editor-header">
        <h2>
          <span style="font-size: 1.25rem;">üìù</span>
          Blog Editor
        </h2>
        <span style="font-size: 0.875rem; opacity: 0.8;">Markdown Supported</span>
      </div>

      <div class="editor-body">
        <form method="POST" action="/admin/edit/<%= blog._id %>?_method=PUT" id="editForm">
          <div class="form-group">
            <label for="title">
              Blog Title
              <span class="label-hint">Keep it catchy and clear</span>
            </label>
            <input
                    type="text"
                    id="title"
                    name="title"
                    value="<%= blog.title %>"
                    placeholder="Enter blog title"
                    required
            />
          </div>

          <div class="form-group">
            <label for="content">
              Blog Content
              <span class="label-hint">Use Markdown for formatting</span>
            </label>
            <textarea id="content" name="content"><%= blog.content %></textarea>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
              </svg>
              Save Changes
            </button>

            <a href="/admin" class="btn btn-secondary">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Cancel
            </a>
          </div>
        </form>

        <!-- Danger Zone -->
        <div class="danger-zone">
          <div class="danger-header">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            Danger Zone
          </div>
          <div class="danger-body">
            <p class="danger-text">
              Once you delete this blog, it cannot be recovered. All associated data will be permanently removed.
            </p>
            <button type="button" class="btn btn-danger" onclick="showDeleteModal()">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Delete Blog
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="edit-sidebar">
      <!-- Preview Card -->
      <div class="sidebar-card">
        <div class="sidebar-header">
          <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--accent);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
          Live Preview
        </div>
        <div class="sidebar-body">
          <div class="preview-section">
            <div class="preview-label">Preview</div>
            <div class="preview-title" id="previewTitle"><%= blog.title %></div>
            <div class="preview-meta" id="previewMeta">
              <%= Math.ceil(blog.content.split(/\s+/).length / 200) %> min read ‚Ä¢
              <%= blog.content.split(/\s+/).length %> words
            </div>
          </div>
        </div>
      </div>

      <!-- Info Card -->
      <div class="sidebar-card">
        <div class="sidebar-header">
          <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: var(--accent);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Blog Info
        </div>
        <div class="sidebar-body">
          <div class="info-item">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>Created: <%= new Date(blog.createdAt).toLocaleDateString() %></span>
          </div>
          <div class="info-item">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            <span>Last updated: Just now</span>
          </div>
          <div class="info-item">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span>ID: <%= blog._id.toString().slice(-6) %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
