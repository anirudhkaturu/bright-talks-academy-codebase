  <style>
    /* ------------------------------ ROOT VARIABLES --------------------------------*/
    :root {
      --primary: #0f172a;
      --primary-light: #1e293b;
      --accent: #f59e0b;
      --accent-light: #fbbf24;
      --accent-gradient: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
      --dark: #0f172a;
      --muted: #64748b;
      --light: #f8fafc;
      --white: #ffffff;
      --cream: #fefdfc;
      --border: #e2e8f0;
      --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
      --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
      --shadow-lg: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
      --shadow-colored: 0 20px 40px -5px rgba(245, 158, 11, 0.15);
      --radius-sm: 8px;
      --radius-md: 12px;
      --radius-lg: 16px;
      --radius-xl: 24px;

      --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
      --font-display: 'Playfair Display', Georgia, serif;
    }

    /* ------------------------------ RESET & BASE --------------------------------*/
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: var(--font-sans);
      background: var(--cream);
      color: var(--dark);
      line-height: 1.6;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    ::selection {
      background: var(--accent);
      color: white;
    }

    /* ------------------------------ UTILITIES --------------------------------*/
    .container {
      width: 100%;
      max-width: 1280px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .section-header {
      max-width: 640px;
      margin-bottom: 4rem;
      text-align: center;
      margin-left: auto;
      margin-right: auto;
    }

    .section-label {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--accent);
      margin-bottom: 1rem;
    }

    .section-label::before {
      content: '';
      width: 24px;
      height: 2px;
      background: var(--accent);
    }

    h2 {
      font-family: var(--font-display);
      font-size: clamp(2rem, 5vw, 3rem);
      font-weight: 700;
      color: var(--primary);
      line-height: 1.2;
      margin-bottom: 1rem;
    }

    .subtitle {
      font-size: 1.125rem;
      color: var(--muted);
      line-height: 1.7;
    }

    /* ------------------------------ HERO SECTION --------------------------------*/
    .about-hero {
      position: relative;
      padding: 10rem 0 6rem;
      background: linear-gradient(135deg, var(--cream) 0%, #fffbeb 50%, var(--cream) 100%);
      overflow: hidden;
      text-align: center;
    }

    .about-hero::before {
      content: '';
      position: absolute;
      top: -50%;
      left: 50%;
      transform: translateX(-50%);
      width: 1000px;
      height: 1000px;
      background: radial-gradient(circle, rgba(245, 158, 11, 0.08) 0%, transparent 70%);
      pointer-events: none;
    }

    .about-hero .container {
      position: relative;
      z-index: 1;
    }

    .about-hero h1 {
      font-family: var(--font-display);
      font-size: clamp(2.5rem, 6vw, 4.5rem);
      font-weight: 700;
      color: var(--primary);
      line-height: 1.1;
      margin-bottom: 1.5rem;
      letter-spacing: -0.02em;
    }

    .about-hero h1 span {
      color: var(--accent);
      position: relative;
      display: inline-block;
    }

    .about-hero h1 span::after {
      content: '';
      position: absolute;
      bottom: 5px;
      left: 0;
      width: 100%;
      height: 12px;
      background: rgba(245, 158, 11, 0.15);
      z-index: -1;
      border-radius: 4px;
    }

    .about-hero p {
      font-size: 1.25rem;
      color: var(--muted);
      max-width: 640px;
      margin: 0 auto 2.5rem;
      line-height: 1.7;
    }

    .cta {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      background: var(--accent-gradient);
      color: var(--primary);
      padding: 1rem 2rem;
      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: 1rem;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-sm);
      border: 2px solid transparent;
    }

    .cta:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-colored);
      gap: 1rem;
    }

    /* ------------------------------ STORY SECTION --------------------------------*/
    .about-story {
      padding: 8rem 0;
      background: var(--white);
      position: relative;
    }

    .story-content {
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }

    .story-content h2 {
      margin-bottom: 2rem;
    }

    .story-content p {
      font-size: 1.125rem;
      color: var(--muted);
      line-height: 1.9;
      margin-bottom: 1.5rem;
    }

    .story-highlight {
      background: linear-gradient(to right, rgba(245, 158, 11, 0.1), transparent);
      border-left: 4px solid var(--accent);
      padding: 1.5rem 2rem;
      margin: 3rem 0;
      text-align: left;
      border-radius: 0 var(--radius-md) var(--radius-md) 0;
    }

    .story-highlight p {
      font-family: var(--font-display);
      font-size: 1.5rem;
      color: var(--primary);
      font-style: italic;
      margin: 0;
      line-height: 1.4;
    }

    /* ------------------------------ STATS SECTION --------------------------------*/
    .about-stats {
      padding: 4rem 0;
      background: var(--primary);
      position: relative;
      overflow: hidden;
    }

    .about-stats::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 400px;
      height: 400px;
      background: radial-gradient(circle, rgba(245, 158, 11, 0.1) 0%, transparent 70%);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 3rem;
      position: relative;
      z-index: 1;
    }

    .stat {
      text-align: center;
      padding: 2rem;
      position: relative;
    }

    .stat:not(:last-child)::after {
      content: '';
      position: absolute;
      right: -1.5rem;
      top: 50%;
      transform: translateY(-50%);
      width: 1px;
      height: 60px;
      background: rgba(255, 255, 255, 0.1);
    }

    .stat-number {
      font-family: var(--font-display);
      font-size: 3.5rem;
      font-weight: 700;
      color: var(--accent);
      line-height: 1;
      margin-bottom: 0.5rem;
      display: block;
    }

    .stat-label {
      font-size: 1rem;
      color: rgba(255, 255, 255, 0.8);
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* ------------------------------ PHILOSOPHY SECTION --------------------------------*/
    .about-philosophy {
      padding: 8rem 0;
      background: var(--cream);
    }

    .philosophy-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 4rem;
    }

    .philosophy-card {
      background: var(--white);
      padding: 3rem 2rem;
      border-radius: var(--radius-xl);
      border: 1px solid var(--border);
      text-align: center;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .philosophy-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: var(--accent-gradient);
      transform: scaleX(0);
      transform-origin: center;
      transition: transform 0.4s ease;
    }

    .philosophy-card:hover {
      transform: translateY(-8px);
      box-shadow: var(--shadow-lg);
      border-color: transparent;
    }

    .philosophy-card:hover::before {
      transform: scaleX(1);
    }

    .philosophy-icon {
      width: 64px;
      height: 64px;
      background: rgba(245, 158, 11, 0.1);
      border-radius: var(--radius-lg);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1.5rem;
      font-size: 2rem;
      transition: all 0.3s ease;
    }

    .philosophy-card:hover .philosophy-icon {
      background: var(--accent-gradient);
      transform: scale(1.1) rotate(-5deg);
    }

    .philosophy-card h3 {
      font-family: var(--font-display);
      font-size: 1.5rem;
      color: var(--primary);
      margin-bottom: 1rem;
    }

    .philosophy-card p {
      color: var(--muted);
      font-size: 1rem;
      line-height: 1.7;
      margin: 0;
    }

    /* ------------------------------ PROGRAMS SECTION --------------------------------*/
    .about-programs {
      padding: 8rem 0;
      background: var(--white);
    }

    .programs-wrapper {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1.5rem;
      margin-top: 4rem;
    }

    .program-card {
      background: var(--white);
      border: 2px solid var(--border);
      padding: 2rem;
      border-radius: var(--radius-lg);
      font-weight: 600;
      text-align: center;
      transition: all 0.3s ease;
      cursor: pointer;
      position: relative;
      overflow: hidden;
    }

    .program-card::after {
      content: '‚Üí';
      position: absolute;
      bottom: 1.5rem;
      right: 1.5rem;
      opacity: 0;
      transform: translateX(-10px);
      transition: all 0.3s ease;
      color: var(--accent);
      font-size: 1.25rem;
    }

    .program-card:hover {
      border-color: var(--accent);
      transform: translateY(-4px);
      box-shadow: var(--shadow-md);
    }

    .program-card:hover::after {
      opacity: 1;
      transform: translateX(0);
    }

    .program-icon {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      display: block;
    }

    .program-card h4 {
      font-family: var(--font-display);
      font-size: 1.25rem;
      color: var(--primary);
      margin: 0;
    }

    /* ------------------------------ WHY US SECTION --------------------------------*/
    .about-why {
      padding: 8rem 0;
      background: linear-gradient(to bottom, var(--cream), var(--white));
    }

    .why-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 4rem;
    }

    .why-item {
      display: flex;
      gap: 1.5rem;
      padding: 2rem;
      background: var(--white);
      border-radius: var(--radius-lg);
      border: 1px solid var(--border);
      transition: all 0.3s ease;
    }

    .why-item:hover {
      box-shadow: var(--shadow-md);
      transform: translateX(8px);
      border-color: var(--accent);
    }

    .why-icon {
      width: 48px;
      height: 48px;
      min-width: 48px;
      background: var(--accent-gradient);
      border-radius: var(--radius-md);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.5rem;
      box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }

    .why-content h3 {
      font-family: var(--font-display);
      font-size: 1.25rem;
      color: var(--primary);
      margin-bottom: 0.5rem;
    }

    .why-content p {
      color: var(--muted);
      font-size: 0.95rem;
      line-height: 1.6;
      margin: 0;
    }

    /* ------------------------------ CTA SECTION --------------------------------*/
    .about-cta {
      padding: 8rem 0;
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .about-cta::before {
      content: '';
      position: absolute;
      top: -50%;
      right: -10%;
      width: 600px;
      height: 600px;
      background: radial-gradient(circle, rgba(245, 158, 11, 0.1) 0%, transparent 70%);
    }

    .cta-content {
      position: relative;
      z-index: 1;
      max-width: 700px;
      margin: 0 auto;
    }

    .about-cta h2 {
      color: var(--white);
      margin-bottom: 1.5rem;
    }

    .about-cta p {
      color: rgba(255, 255, 255, 0.8);
      font-size: 1.25rem;
      margin-bottom: 2.5rem;
    }

    .about-cta .cta {
      background: var(--white);
      color: var(--primary);
      font-size: 1.125rem;
      padding: 1.25rem 2.5rem;
    }

    .about-cta .cta:hover {
      background: var(--accent);
      color: var(--primary);
    }

    /* ------------------------------ ANIMATIONS --------------------------------*/
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .reveal {
      opacity: 0;
      transform: translateY(30px);
      transition: all 0.8s ease;
    }

    .reveal.active {
      opacity: 1;
      transform: translateY(0);
    }

    /* ------------------------------ RESPONSIVE --------------------------------*/
    @media (max-width: 1024px) {
      .stat:not(:last-child)::after {
        display: none;
      }

      .stats-grid {
        gap: 2rem;
      }
    }

    @media (max-width: 768px) {
      .container {
        padding: 0 1.5rem;
      }

      .about-hero {
        padding: 8rem 0 4rem;
      }

      .philosophy-grid,
      .programs-wrapper,
      .why-grid {
        grid-template-columns: 1fr;
      }

      .stat-number {
        font-size: 2.5rem;
      }
    }
  </style>
</head>

